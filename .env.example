# Unified Voice-Enabled Network Management Platform Configuration

# =====================================================
# CORE APPLICATION SETTINGS
# =====================================================

# Application Mode
APP_MODE=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =====================================================
# FORTIMANAGER CONFIGURATION
# =====================================================

# FortiManager Connection
FM_HOST=your-fortimanager-host.company.com
FM_USERNAME=your_username
FM_PASSWORD=your_password
FM_PORT=443
FM_VERIFY_SSL=true

# FortiAnalyzer Connection (Optional)
FA_HOST=your-fortianalyzer-host.company.com
FA_USERNAME=your_username  
FA_PASSWORD=your_password
FA_PORT=443

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# Main Database (SQLite default, supports PostgreSQL)
DATABASE_URL=sqlite:///./data/network_management.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/network_management

# LTM Intelligence Database
LTM_DATABASE_URL=sqlite:///./data/ltm_memory.db

# =====================================================
# MCP MEMORY SYSTEM
# =====================================================

# MCP Memory Path (External state persistence)
# Linux/Mac: ~/.claude-memory
# Windows: %USERPROFILE%/.claude-memory
MCP_MEMORY_PATH=~/.claude-memory
MCP_MEMORY_ENABLED=true

# Memory Configuration
MCP_PATTERN_CONFIDENCE_THRESHOLD=0.6
MCP_MIN_PATTERN_FREQUENCY=2
MCP_MAX_MEMORY_AGE_DAYS=365

# =====================================================
# VOICE INTERFACE CONFIGURATION
# =====================================================

# Voice Control Settings
VOICE_ENABLED=true
VOICE_RATE=1.0
VOICE_VOLUME=0.8
VOICE_AUTO_ANNOUNCE=true

# Voice Recognition Settings
VOICE_LANGUAGE=en-US
VOICE_CONTINUOUS_LISTENING=false
VOICE_TIMEOUT_SECONDS=10

# Voice Accessibility
VOICE_ACCESSIBILITY_MODE=false
VOICE_SCREEN_READER_SUPPORT=true

# =====================================================
# ENHANCED UTILITIES CONFIGURATION
# =====================================================

# Utilities Path (30+ network tools)
UTILITIES_PATH=./src/utilities/scripts
UTILITIES_TIMEOUT_SECONDS=300

# Network Discovery Settings
DEFAULT_NETWORK_RANGE=192.168.1.0/24
SNMP_COMMUNITY=public
SNMP_TIMEOUT=60

# SSL Diagnostics Settings
SSL_VERIFY_CHAIN=true
SSL_CHECK_EXPIRATION=true
SSL_WARNING_DAYS=30

# =====================================================
# BRAND CONFIGURATION (Multi-Brand Restaurant Support)
# =====================================================

# Supported Brands
BRANDS_ENABLED=BWW,ARBYS,SONIC

# Buffalo Wild Wings
BWW_PREFIX=IBR-BWW
BWW_FORTIMANAGER_ADOM=BWW-ADOM

# Arby's  
ARBYS_PREFIX=IBR-ARBYS
ARBYS_FORTIMANAGER_ADOM=ARBYS-ADOM

# Sonic Drive-In
SONIC_PREFIX=IBR-SONIC
SONIC_FORTIMANAGER_ADOM=SONIC-ADOM

# =====================================================
# MERAKI CONFIGURATION (Optional)
# =====================================================

# Meraki Dashboard API
MERAKI_API_KEY=your-meraki-api-key
MERAKI_BASE_URL=https://api.meraki.com/api/v1
MERAKI_ORG_ID=your-organization-id

# =====================================================
# POWER AUTOMATE INTEGRATION (Optional)
# =====================================================

# Microsoft Power Automate Webhooks
POWER_AUTOMATE_ENABLED=false
POWER_AUTOMATE_WEBHOOK_URL=https://prod-00.westus.logic.azure.com/workflows/your-workflow-id

# Notification Settings
NOTIFICATIONS_ENABLED=true
NOTIFICATION_WEBHOOK_TIMEOUT=30

# =====================================================
# LOGGING CONFIGURATION
# =====================================================

# Log Files
LOG_FILE=./data/logs/application.log
VOICE_LOG_FILE=./data/logs/voice_commands.log
UTILITIES_LOG_FILE=./data/logs/utilities.log
ACCESS_LOG_FILE=./data/logs/access.log

# Log Rotation
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_ROTATION_ENABLED=true

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:5000"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# SSL/TLS Configuration
SSL_CERT_PATH=./config/ssl/cert.pem
SSL_KEY_PATH=./config/ssl/key.pem
SSL_ENABLED=false

# =====================================================
# MONITORING & HEALTH CHECKS
# =====================================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_ENABLED=true
METRICS_PORT=9090

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================

# Development Mode (Only for development)
DEV_MODE=false
DEV_HOT_RELOAD=false
DEV_DEBUG_TOOLBAR=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test_network_management.db
TEST_MCP_MEMORY_PATH=./test_memory
TEST_MODE=false

# =====================================================
# ENTERPRISE FEATURES (Optional)
# =====================================================

# LDAP/Active Directory Integration
LDAP_ENABLED=false
LDAP_SERVER=ldap://your-ldap-server.company.com
LDAP_BASE_DN=dc=company,dc=com
LDAP_USER_DN=cn=users,dc=company,dc=com

# Multi-Factor Authentication
MFA_ENABLED=false
MFA_ISSUER=Unified Network Platform
MFA_BACKUP_CODES=10

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=./data/logs/audit.log
AUDIT_RETENTION_DAYS=90

# =====================================================
# CLOUD DEPLOYMENT (Optional)
# =====================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Azure Configuration  
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group

# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_SERVICE_ACCOUNT_KEY=./config/gcp-key.json

# =====================================================
# ADDITIONAL INTEGRATIONS
# =====================================================

# Splunk Integration
SPLUNK_ENABLED=false
SPLUNK_HOST=your-splunk-host.company.com
SPLUNK_PORT=8089
SPLUNK_USERNAME=your_splunk_user
SPLUNK_PASSWORD=your_splunk_password

# Webhook Integrations
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_VERIFY_SSL=true